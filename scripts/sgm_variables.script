function variables_main()
   variables_update()
end
function variables_update()
    --//Контроль уровня громкости в МП-3 плеере//-->
    if read_mod_param("mp3_currert_volume")==nil then
       write_mod_param("mp3_currert_volume",0.5)
    elseif read_mod_param("mp3_currert_volume")~=nil then
       if read_mod_param("mp3_currert_volume")<0.0 then 
          write_mod_param("mp3_currert_volume",0.0)
       elseif read_mod_param("mp3_currert_volume")>1.0 then 
          write_mod_param("mp3_currert_volume",1.0)
       end
    end
end
