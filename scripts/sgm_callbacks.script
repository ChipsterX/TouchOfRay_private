function on_use_item(item)
   local actor = db.actor
   local item_name = item:section()
   if item_name=="mp3_player" then
      give_info("mp3_player_active")
      sgm_functions.write_variable("mp3_currert_volume",0.6) 
      run_dynamic_element(ui_mod_elements.mp3_player(),true,true)
   end
end
