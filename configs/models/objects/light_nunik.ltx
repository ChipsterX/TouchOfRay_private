[torch_definition]

omni_range		            = 0.2							; Угол теней                	 <В метрах>

glow_radius     			= 0.2							; Радиус свечения на руках       <В метрах>

color	        			= 0.95, 1.05, 1.3, 0.6			; Цвет 			<r,g,b,a> 		  0.f<X<3.f
omni_color           		= 1.05, 0.9, 1.3, 0.6			; Цвет теней 	<r,g,b,a> 		  0.f<X<3.f

range		    			= 19							; Угол освещения new  			 <В метрах>
range_curve     			= 8 							; range curvature, the formula is: range = range_max * atan(range_curve * condition) / (pi/2)

spot_texture            	= shaders\orange_light			; Текстура точки света     	    (using only in Second Render)

glow_texture           	 	= shaders\glow_orange_new		; Текстура отбрасываемого света (required)

color_animator         	 	= galogen_br					; Название анимации для света   (empty - not using animator) //light_torch_01

spot_angle              	= 48							; Угол точки света              (in gradus)

guide_bone              	= lights_bone					; Крепление фонарика на ГГ      (required)

volumetric		        	= true							; Включить или отключить объемный свет 
volumetric_distance 		= 0.9 							; Дистанция объемного света
volumetric_intensity   		= 0.09 							; Интенсивность объемного света
volumetric_quality			= 0.3							; Качество объемного света