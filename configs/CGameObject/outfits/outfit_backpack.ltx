[equ_backpack]
GroupControlSection                      = spawn_group
discovery_dependency                     =
$spawn                                   = "equipments\backpack"
$prefetch                                = 32
class                                    = EQ_BAKPK
cform                                    = skeleton
visual                                   = dynamics\devices\dev_rukzak\dev_rukzak.ogf
description                              = st_equ_backpack_desc
inv_weight                               = 1
inv_name                                 = st_equ_backpack_name
inv_name_short                           = st_equ_backpack_name
inv_grid_width                           = 2
inv_grid_height                          = 2
inv_grid_x                               = 18
inv_grid_y                               = 18
cost                                     = 6000
highlight_equipped 						 = true
slot                                     = 12
additional_inventory_weight				 = 10
additional_inventory_weight2			 = 10
use_condition							 = false
can_stack 								 = true
default_to_ruck                          = false
sprint_allowed							 = true
immunities_sect                          = sect_backpack_immunities
control_inertion_factor					 = 1.0
power_loss								 = 0.04 ;NEW FORMULA BELOW
; power restore (0.0 base) * (0.5 + outfit power loss + helmet power loss + backpack power loss)
use1_functor                             = actor_backpack.query_create_stash
use1_action_functor                      = actor_backpack.action_create_stash

upgrades								 = ;up_gr_firstab_backpack			; * Dear modders, backpacks can have upgrades *
upgrade_scheme							 = ;upgrade_scheme_backpack

[sect_backpack_immunities]
burn_immunity                            = 0.0
strike_immunity                          = 0.0
shock_immunity                           = 0.0
wound_immunity                           = 0.0
wound_2_immunity                         = 0.0
radiation_immunity                       = 0.0
telepatic_immunity                       = 0.0
chemical_burn_immunity                   = 0.0
explosion_immunity                       = 0.0
fire_wound_immunity                      = 0.0

